{{> header }}

<div class="container">
    <div class="row">
        <div class="col-sm-9 blog-main">
          {{#each posts}}
          <div class = "blog-post">
              <!-- <article class="post"> -->
                <h2 class = "blog-post-title"><a href="{{ this.path }}">{{capitalize this.meta.title}}</a></h2>
                <p class="date">{{ this.meta.formattedDate }}</p>
                {{{ this.post.content }}}
              <!-- </article> -->
            </div>
          {{/each}}
        </div>
          <div class="col-sm-2 col-sm-offset-1 blog-sidebar">
            {{> sidebar }}
          </div>
    </div>
      <div class="row">
          <div class="col-md-12">
               <ul class="pager">
                  {{#if prevChunk}}
                      <li><a href="/posts/{{ prevChunk }}/">Newer</a></li>
                  {{/if}}

                  {{#if nextChunk}}
                      <li><a href="/posts/{{ nextChunk }}/">Older</a></li>
                  {{/if}}
               </ul>
          </div>
      </div>
</div>
{{> footer }}
